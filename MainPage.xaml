<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:LocationTrackerApp"
             x:Class="LocationTrackerApp.MainPage">

    <StackLayout>
        <local:HeatMap
            x:Name="MapView"/>
        <Button
            x:Name="StartTrackingButton"
            Text="Start Tracking" 
            SemanticProperties.Hint="Start tracking of location"
            Clicked="StartTrackingButton_Clicked"/>
        <Button
            x:Name="StopTrackingButton"
            Text="Stop Tracking" 
            SemanticProperties.Hint="Stop tracking of location"
            Clicked="StopTrackingButton_Clicked"/>
    </StackLayout>

</ContentPage>
